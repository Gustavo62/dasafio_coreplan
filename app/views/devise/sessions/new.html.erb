<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex align-items-center">
    <div class="col-md-6 order-md-2">
      <img src="https://preview.colorlib.com/theme/bootstrap/login-form-08/images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
    </div>
    <div class="col-md-6 contents">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="mb-4">
          <h3>Entrar no <strong>CoreMedia</strong></h3>
          <p class="mb-4">A sua rede social para interagir ee conhecer novos amigos.</p>
        </div>
        <form action="#" method="post">
          <div class="form-group first">
            <label>E-mail</label>
            <%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="form-group last mb-4">
            <label>Senha</label>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control",id:"password"%>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="d-flex mb-5 align-items-center">
              <label class="control control--checkbox mb-0"><span class="caption">Lembrar-se</span>
                <%= f.check_box :remember_me %>
                <div class="control__indicator"></div>
              </label>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
          <%= f.submit "Entrar",class:"btn text-white btn-block btn-primary" %>
        </form>
        </div>
      </div>

    </div>

  </div>

<% end %>
